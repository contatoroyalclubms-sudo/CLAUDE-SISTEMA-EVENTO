# Copie para .env e configure seus valores

# ================================
# EXTERNAL MCP SERVERS (271 SERVERS)
# ================================
EXTERNAL_MCP_CONFIG_PATH=./external-mcp-servers.json
EXTERNAL_MCP_SERVERS_COUNT=271

# Check-in MCP Servers
QR_SCANNER_MCP_ENABLED=true
QR_SCANNER_API_KEY=your_qr_scanner_api_key_here
FACIAL_RECOGNITION_MCP_ENABLED=true
FACIAL_RECOGNITION_API_KEY=your_facial_recognition_api_key_here
FACIAL_RECOGNITION_MODEL=supreme_v2
VIP_MANAGEMENT_MCP_ENABLED=true
VIP_DATABASE_URL=postgresql://localhost:5432/vip_database
CAPACITY_CONTROL_MCP_ENABLED=true
MAX_CAPACITY=1000
CAPACITY_ALERTS_ENABLED=true

# PDV MCP Servers
PAYMENT_PROCESSOR_MCP_ENABLED=true
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_api_key_here
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret_here
MERCHANT_ID=your_merchant_id_here
FISCAL_PRINTER_MCP_ENABLED=true
FISCAL_PRINTER_PORT=COM1
FISCAL_PRINTER_MODEL=EPSON_TM_T20
INVENTORY_MANAGEMENT_MCP_ENABLED=true
INVENTORY_DATABASE_URL=postgresql://localhost:5432/inventory_database
CASHLESS_INTEGRATION_MCP_ENABLED=true
CASHLESS_API_URL=https://api.cashless-system.com
CASHLESS_API_KEY=your_cashless_api_key_here

# Analytics and Notifications
ANALYTICS_MCP_ENABLED=true
NOTIFICATION_MCP_ENABLED=true

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgres://torre_admin:suprema_power_2024@localhost:5432/torre_suprema_memory
DB_HOST=localhost
DB_PORT=5432
DB_NAME=torre_suprema_memory
DB_USER=torre_admin
DB_PASSWORD=suprema_power_2024

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# KAFKA CONFIGURATION
# ================================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=torre-suprema
KAFKA_GROUP_ID=torre-suprema-group

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=3001
WEBSOCKET_PORT=8080
JWT_SECRET=torre_suprema_jwt_secret_change_in_production
API_PREFIX=/api/v1

# ================================
# MCP SERVERS CONFIGURATION
# ================================
# GitHub MCP
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_ORGANIZATION=contatoroyalclubms-sudo

# Slack MCP  
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WORKSPACE=torre-suprema

# Notion MCP
NOTION_API_KEY=secret_your_notion_integration_key
NOTION_DATABASE_ID=your_notion_database_id

# Figma MCP
FIGMA_ACCESS_TOKEN=figd_your_figma_access_token
FIGMA_TEAM_ID=your_figma_team_id

# Cloudflare MCP
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Vercel MCP
VERCEL_TOKEN=your_vercel_token
VERCEL_TEAM_ID=your_vercel_team_id

# PostgreSQL MCP (for other databases)
POSTGRES_MCP_HOST=localhost
POSTGRES_MCP_PORT=5432
POSTGRES_MCP_DATABASE=your_app_database
POSTGRES_MCP_USER=your_app_user
POSTGRES_MCP_PASSWORD=your_app_password

# Docker MCP
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_API_VERSION=1.43

# ================================
# MONITORING & OBSERVABILITY
# ================================
# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Grafana  
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# ================================
# SECURITY SETTINGS
# ================================
# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
HASH_SALT_ROUNDS=12

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# CLOUD PROVIDER SETTINGS
# ================================
# AWS (if using)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=torre-suprema-storage

# Azure (if using)  
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# GCP (if using)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your_gcp_project_id

# ================================
# EMAIL CONFIGURATION
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=torre-suprema@your-domain.com

# ================================
# WEBHOOK CONFIGURATION
# ================================
WEBHOOK_SECRET=your_webhook_verification_secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url

# ================================
# FEATURE FLAGS
# ================================
ENABLE_DEBUG_LOGS=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_REAL_TIME_DASHBOARD=true
ENABLE_AI_INSIGHTS=true
ENABLE_AUTO_SCALING=true

# ================================
# AI & ML CONFIGURATION  
# ================================
# OpenAI (if needed for additional AI features)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Claude (if using additional Claude instances)
CLAUDE_API_KEY=sk-ant-your_claude_api_key_here

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Hot Reload
ENABLE_HOT_RELOAD=true

# Debug Modes
DEBUG_ORCHESTRATOR=false
DEBUG_AGENTS=false
DEBUG_MCP=false
DEBUG_DATABASE=false

# Test Database (for testing)
TEST_DATABASE_URL=postgres://torre_admin:suprema_power_2024@localhost:5432/torre_suprema_test

# ================================
# PRODUCTION OVERRIDES
# ================================
# Use these in production environment
# NODE_ENV=production
# DEBUG_LOGS=false
# JWT_SECRET=super_secure_production_jwt_secret_256_bits
# DATABASE_URL=postgres://prod_user:secure_password@prod-db:5432/torre_suprema_prod
# REDIS_URL=redis://prod-redis:6379

# ================================
# BACKUP & RECOVERY
# ================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=torre-suprema-backups

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=100m

# ================================
# HEALTH CHECKS
# ================================
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
HEALTH_CHECK_TIMEOUT=5000    # 5 seconds
HEALTH_CHECK_RETRIES=3
